{
    "name": "root",
    "private": true,
    "scripts": {
        "clean": "lerna clean -y",
        "init": "lerna bootstrap --ignore-prepublish --ignore=dishi-electron --hoist",
        "init-electron": "lerna bootstrap --ignore-prepublish --hoist",
        "check": "qlerna ncu ./packages",
        "pkg": "qlerna pkg ./packages",
        "dpkg": "qlerna pkg ./packages 1",
        "eslint": "eslint . --ext .js,.jsx -c _config.eslint.js",
        "eslintfix": "eslint . --ext .js,jsx --fix -c _config.eslint.js"
    },
    "devDependencies": {
        "eslint": "^8.25.0",
        "eslint-plugin-react": "^7.31.10",
        "eslint-plugin-react-hooks": "^4.6.0",
        "qiao-lerna": "^0.5.2"
    }
}